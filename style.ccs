body {
  font-family: Arial;
  background: #f2f2f2;
  padding: 40px;
}

h1 {
  text-align: center;
}

.form {
  max-width: 400px;
  background: white;
  margin: auto;
  padding: 20px;
}

input, button {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
}

button {
  background: black;
  color: white;
  border: none;
}
textarea {
  width: 100%;
  height: 100px;
  padding: 10px;
  margin-bottom: 10px;
  font-family: Arial;
}
